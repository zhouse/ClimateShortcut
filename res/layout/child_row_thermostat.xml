<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="@drawable/rounded_device_bckg"
    android:layout_marginLeft="5dip"
    android:layout_marginRight="5dip"
    android:layout_height="wrap_content">
    
    <RelativeLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content">
	    
	  	<TextView android:id="@+id/grp_child"
	       	android:singleLine="true"
	       	android:ellipsize="marquee"
	       	android:layout_marginRight="10dip"
	       	android:drawableLeft="@drawable/thermostat_icon_active2"
	       	android:gravity="center_vertical"
	      	android:paddingLeft="15dip"
	       	android:focusable="false"
	       	android:textSize="22dip"
	       	android:textStyle="normal"
	       	android:layout_width="fill_parent"
	       	android:layout_height="wrap_content"/>
	  	
  		<TextView android:id="@+id/textState"
	        android:layout_marginRight="5dip"	        
	        android:layout_alignParentRight="true"
	        android:gravity="center_vertical|right"
	        android:singleLine="true"
	        android:ellipsize="marquee"
	        android:textColor="#ff8dbe00"
	        android:focusable="false"
	        android:textSize="22dip"
	        android:layout_width="60dip"
	        android:layout_height="61dip"/>
	</RelativeLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
    
    	<TextView android:id="@+id/stateDescription"
        	android:ellipsize="marquee"
         	android:gravity="center_vertical"
         	android:text="@string/thermostat_state_desc"
         	android:paddingLeft="65dip"
          	android:focusable="false"
         	android:textSize="14dip"
         	android:textStyle="normal"
         	android:layout_width="170dip"
         	android:layout_height="wrap_content"/>

    	<TextView android:id="@+id/statePosition"
         	android:gravity="center_vertical|center_horizontal"
         	android:ellipsize="marquee"
         	android:textColor="#ff8dbe00"
         	android:focusable="false"
         	android:textSize="14dip"
         	android:textStyle="normal"
         	android:layout_width="fill_parent"
         	android:layout_height="wrap_content"/>
    </LinearLayout>
	
</LinearLayout>
</LinearLayout>